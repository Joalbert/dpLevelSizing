<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/toolbarNightMode</item>
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
        <item name="android:colorActivatedHighlight">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="dayTheme">
        <item name="colorPrimary">@color/toolbarDayMode</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
        <item name="android:colorActivatedHighlight">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/primary_text_dark</item>
    </style>
</resources>
